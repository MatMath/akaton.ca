{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    ".eslintrc.js",
    "jest.config.js",
    "package.json",
    "src",
    "test",
    "test/.eslintrc.js",
    "webpack"
  ],
  "parserOptions": {
    "extraFileExtensions": ".json"
  }
}